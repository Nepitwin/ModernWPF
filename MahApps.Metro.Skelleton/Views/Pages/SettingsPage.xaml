<ui:Page x:Class="MahApps.Metro.Skelleton.Views.Pages.SettingsPage"
         xmlns:ui="http://schemas.modernwpf.com/2019"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:sc="clr-namespace:MahApps.Metro.Skelleton.Common" 
         xmlns:viewmodels="clr-namespace:MahApps.Metro.Skelleton.ViewModels.Pages" d:DataContext="{d:DesignInstance Type=viewmodels:SettingsPageViewModel}"
         mc:Ignorable="d">

    <Page.Resources>
        <sc:AppThemeConverter x:Key="AppThemeConverter" />
    </Page.Resources>

    <ScrollViewer>
        <Grid Margin="24,0">
            <GroupBox Header="Theme Mode">
                <ui:RadioButtons SelectedItem="{Binding Source={x:Static ui:ThemeManager.Current}, Path=ApplicationTheme, Converter={StaticResource AppThemeConverter}}">
                    <ui:RadioButtons.ItemsSource>
                        <sc:AppThemes />
                    </ui:RadioButtons.ItemsSource>
                </ui:RadioButtons>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</ui:Page>
